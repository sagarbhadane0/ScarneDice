<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score:  "
        android:id="@+id/lblmsg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblmyScore"
        android:text="0"
        android:layout_toRightOf="@+id/lblmsg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblmsg1"
        android:text="   Computer Score:  "
        android:layout_toRightOf="@+id/lblmyScore"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCScore"
        android:text="0"
        android:layout_toRightOf="@+id/lblmsg1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dice1"
        android:layout_below="@id/lblmyScore"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgView"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:text="Roll"
        android:id="@+id/btnRoll"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:text="Hold"
        android:layout_toRightOf="@+id/btnRoll"
        android:id="@+id/btnHold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:text="Reset"
        android:layout_toRightOf="@+id/btnHold"
        android:id="@+id/btnReset"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtTurnScore"
        android:layout_below="@+id/btnHold"
        android:textSize="50dp"
        android:layout_centerHorizontal="false"
        />

</RelativeLayout>